@import "_partial/varables"
@import "_partial/animate"
@import "_partial/reset"
global-reset()
body
    background-image url($background_img)

@keyframes breathe
    0% 
        box-shadow 0 1px 2px rgba(255,255,255,0.1)
        
    100%
        box-shadow 0 1px 30px #fff

$menu_width = 100px

.shakeSlow
    animation-duration: 200ms;
    animation-iteration-count: infinite; 

#main_nav_toggle
    display inline-block
    position absolute
    height 100%
    width 100%
    z-index 99
    overflow-x hidden
    input#tm
        display none
    section
        position relative
        transition all 0.6s
        z-index 999
    section 
        label
            position absolute 
            display block
            left 5px 
            top 5px
            cursor pointer 
            z-index 99
            width 26px
            height 26px
            overflow hidden
            span,&:after,&:before
                content ''
                display block
                height 3px
                background #fff
                margin 4px 4px 0 4px
                transform rotate(0deg)
                transition all 0.6s
    .sidenav 
        position fixed 
        display block
        background rgb(50, 60, 60)     
        overflow auto
        width $menu_width
        left 0
        top 0
        bottom 0
        opacity 0
        transform translateX(-($menu_width)) 
        transition all 0.6s
        z-index 999
        ul 
            padding-top 2px
        li
            padding 3px 5px 3px 5px
            text-align center
            &.active
                a
                    background rgb(255, 164, 0)
                    color #fff
        a
            color #8F8F8F
            display block
            background rgba(255, 255, 255, 0.18)
            background rgba(0, 0, 0, 0.18)
            transition all 0.6s
            border-radius 5px
            font-size 14px
            line-height 26px
            &:hover,&.active
                background rgb(255, 164, 0)
                color #fff
            &:visited
                background rgba(255,255,255,1)
                color #EAEAEA
    .popup
        transition all 0.6s
        position fixed
        width 100%
        height 100%
        margin-left 0px
        background-color rgba(0, 0, 0,0)
        z-index 999
        opacity 1
        overflow auto
        z-index 0
        .hidden
            opacity 0
    input#tm:checked ~ section 
        transform translateX(($menu_width))
    input#tm:checked ~ .sidenav
        opacity 1
        transform: translateX(0)
    input#tm:checked ~ section label span
        display none
    input#tm:checked ~ section label:before
        margin 12px 4px 0 4px
        transform rotate(45deg)
        border-radius 3px
        background red
    input#tm:checked ~ section label:after
        margin -3px 4px 0 4px
        transform rotate(-45deg)
        border-radius 3px
        background red
    input#tm:checked ~ .iconList
        margin-left 140px
    input#tm:checked ~ .popup
        position fixed
        width 100%
        height 100%
        margin-left $menu_width
        background-color #fff
        z-index 998
        opacity 1
        overflow auto
        .hidden
            opacity 1
            transition all 0.6s
        


