.iconList
    padding 20px
    margin-left 0
    transition all 0.6s
    li 
        margin 15px
        text-align center
        width 64px
        float left
        div.close 
            display block
            height 18px
            width 18px
            position absolute
            right 0px
            margin -9px -9px 0 0
            border-radius 50%
            z-index 1
            padding 3px
            cursor pointer
            background rgba(0, 0, 0, 0.36)
            visibility hidden
            transition all 0.6s
            &:hover 
                background #fff
                &:before,&:after
                    background red
            &:after,&:before
                content ''
                display block
                height 2px
                background #fff
                transform rotate(0deg)
            &:after
                transform: rotate(45deg);
                margin -2px 0 0 0px
            &:before
                transform rotate(-45deg)
                margin 5px 0 0 0
                
        a 
            display inline-block
            line-height 12px
            text-decoration inherit
            &:hover 
                span
                    box-shadow 0px 6px 30px 3px rgba(0, 0, 0, 0.34)
                    animation-timing-function ease-in-out     /*动画时间曲线*/
                    animation-name breathe                    /*动画名称，与@keyframes搭配使用*/
                    animation-duration 500ms                  /*动画持续时间*/
                    animation-iteration-count infinite        /*动画要重复次数*/
                    animation-direction alternate             /*动画执行方向，alternate 表示反复*/
                i.name
                    text-shadow 0px 1px 2px rgb(0, 0, 0)
                    color #C3FFFD
                    font-weight bold
                    text-decoration none
                    
        span,i.name
            display block
            color #fff
            font-size 12px
            overflow hidden
            font-weight bold
        span
            width 64px
            height 64px
            background #fff
            overflow hidden
            box-shadow 0px 1px 4px 0px rgba(0, 0, 0, 0.37)
            &:after
                content ''
            &:first-letter
                font-size 36px
                color #333
                line-height 36px
                text-align center
                line-height 64px
            &:before
                box-shadow inset 0px -5px 5px 0px rgba(255, 255, 255, 0.17)
                content ''
                position absolute
                float left
                width 64px
                height 64px
                z-index 1
                left 0
            img
                width 100%
                height 100%
                                
        span,span:before
            border-radius 100%
        i.name
            padding 4px 0 0 0
            height 20px
            line-height 20px
            text-shadow 0px 1px 2px #000
            font-style normal
            word-break break-all

